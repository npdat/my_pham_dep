.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{'data-target' => '#navbar-collapse-1', 'data-toggle' => 'collapse', type: 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.pull-left.btn.btn-xs.btn-link{href: root_path}
        = image_tag('logo.png', class: 'brand', style: 'margin-top: 5px; height: 100px;')
        %span.icon-bar
    .collapse.navbar-collapse#navbar-collapse-1
      %ul.nav.navbar-nav.navbar-left
        %li
          = link_to 'SHOP', root_path, class: 'header-link'
        %li
          = link_to 'ABOUT', root_path, class: 'header-link'
        %li
          = link_to 'WHERE TO BUY', root_path, class: 'header-link'
        %li
          = link_to 'FAQ', root_path, class: 'header-link'
        %li
          = link_to 'CONTACT', root_path, class: 'header-link'
        %li.dropdown
          %a.dropdown-toggle{ 'data-toggle' => 'dropdown', :href => '#' }
            Hi,
            = cookies[:username]
            %span.caret
          %ul.dropdown-menu{role: 'menu'}
            %li
              = link_to 'Sign out', root_path, method: :delete